<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Pharmacy Product Tree View -->
    <record id="view_pharmacy_product_tree" model="ir.ui.view">
        <field name="name">pharmacy.product.tree</field>
        <field name="model">pharmacy.product</field>
        <field name="arch" type="xml">
            <list string="Pharmacy Products">
                <field name="name"/>
                <field name="generic_name"/>
                <field name="drug_category"/>
                <field name="dosage_form"/>
                <field name="strength"/>
                <field name="ppb_registration_no"/>
                <field name="requires_prescription"/>
            </list>
        </field>
    </record>

    <!-- Pharmacy Product Form View -->
    <record id="view_pharmacy_product_form" model="ir.ui.view">
        <field name="name">pharmacy.product.form</field>
        <field name="model">pharmacy.product</field>
        <field name="arch" type="xml">
            <form string="Pharmacy Product">
                <header>
                    <field name="requires_pharmacist_approval" invisible="1"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Drug Name"/>
                        </h1>
                    </div>
                    <group>
                        <group name="basic_info" string="Basic Information">
                            <field name="product_id" options="{'no_create': True}"/>
                            <field name="generic_name"/>
                            <field name="brand_name"/>
                            <field name="active_ingredient"/>
                        </group>
                        <group name="classification" string="Classification">
                            <field name="drug_category" widget="badge"/>
                            <field name="schedule"/>
                            <field name="dosage_form"/>
                            <field name="strength"/>
                            <field name="pack_size"/>
                        </group>
                    </group>
                    <group>
                        <group name="registration" string="Registration Details">
                            <field name="ppb_registration_no"/>
                            <field name="registration_date"/>
                            <field name="registration_expiry"/>
                        </group>
                        <group name="manufacturer" string="Manufacturer &amp; Supplier">
                            <field name="manufacturer_id"/>
                            <field name="supplier_id"/>
                            <field name="country_of_origin"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Medical Information">
                            <group>
                                <field name="indication"/>
                                <field name="contraindication"/>
                                <field name="side_effects"/>
                                <field name="dosage_instructions"/>
                                <field name="storage_conditions"/>
                            </group>
                        </page>
                        <page string="Classification">
                            <group>
                                <field name="therapeutic_class"/>
                                <field name="pharmacological_class"/>
                                <field name="requires_prescription"/>
                                <field name="max_otc_quantity" invisible="requires_prescription"/>
                            </group>
                        </page>
                        <page string="Stock &amp; Compliance">
                            <group>
                                <group>
                                    <field name="track_expiry"/>
                                    <field name="expiry_alert_days" invisible="not track_expiry"/>
                                    <field name="cold_chain"/>
                                </group>
                                <group>
                                    <field name="barcode"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Pharmacy Product Action -->
    <record id="action_pharmacy_product" model="ir.actions.act_window">
        <field name="name">Pharmacy Products</field>
        <field name="res_model">pharmacy.product</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first pharmaceutical product
            </p>
        </field>
    </record>

</odoo>
