<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Pharmacy Dashboard -->
    <record id="view_pharmacy_dashboard" model="ir.ui.view">
        <field name="name">pharmacy.dashboard</field>
        <field name="model">pos.session</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_dashboard">
                <field name="name"/>
                <field name="user_id"/>
                <field name="start_at"/>
                <field name="stop_at"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary"><field name="name"/></div>
                                    <div class="o_secondary"><field name="user_id"/></div>
                                </div>
                            </div>
                            <div class="container o_kanban_card_content">
                                <div class="row">
                                    <div class="col-6 o_kanban_primary_left">
                                        <button class="btn btn-primary" name="open_frontend_cb" type="object">New Session</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

</odoo>
