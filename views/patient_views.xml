<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Patient Tree View -->
    <record id="view_pharmacy_patient_tree" model="ir.ui.view">
        <field name="name">pharmacy.patient.tree</field>
        <field name="model">pharmacy.patient</field>
        <field name="arch" type="xml">
            <list string="Patients">
                <field name="full_name"/>
                <field name="phone"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="has_insurance"/>
                <field name="prescription_count"/>
            </list>
        </field>
    </record>

    <!-- Patient Form View -->
    <record id="view_pharmacy_patient_form" model="ir.ui.view">
        <field name="name">pharmacy.patient.form</field>
        <field name="model">pharmacy.patient</field>
        <field name="arch" type="xml">
            <form string="Patient">
                <header>
                    <button name="action_view_prescriptions" type="object" string="View Prescriptions" 
                            class="btn-primary" invisible="prescription_count == 0"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_prescriptions" type="object" class="oe_stat_button" icon="fa-prescription">
                            <field name="prescription_count" widget="statinfo" string="Prescriptions"/>
                        </button>
                        <button name="action_view_orders" type="object" class="oe_stat_button" icon="fa-shopping-cart">
                            <field name="pos_order_count" widget="statinfo" string="Orders"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="full_name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Personal Information">
                            <field name="first_name"/>
                            <field name="middle_name"/>
                            <field name="last_name"/>
                            <field name="date_of_birth"/>
                            <field name="age"/>
                            <field name="gender"/>
                        </group>
                        <group string="Contact Information">
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="id_number"/>
                        </group>
                    </group>
                    <group>
                        <group string="Address">
                            <field name="street"/>
                            <field name="street2"/>
                            <field name="city"/>
                            <field name="county"/>
                            <field name="country_id"/>
                        </group>
                        <group string="Emergency Contact">
                            <field name="emergency_contact_name"/>
                            <field name="emergency_contact_phone"/>
                            <field name="emergency_contact_relation"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Medical Information">
                            <group>
                                <field name="blood_group"/>
                                <field name="allergies"/>
                                <field name="chronic_conditions"/>
                                <field name="current_medications"/>
                            </group>
                        </page>
                        <page string="Insurance">
                            <group>
                                <field name="has_insurance"/>
                                <field name="insurance_company" invisible="not has_insurance"/>
                                <field name="insurance_number" invisible="not has_insurance"/>
                                <field name="insurance_expiry" invisible="not has_insurance"/>
                            </group>
                        </page>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Patient Kanban View -->
    <record id="view_pharmacy_patient_kanban" model="ir.ui.view">
        <field name="name">pharmacy.patient.kanban</field>
        <field name="model">pharmacy.patient</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="full_name"/>
                <field name="phone"/>
                <field name="age"/>
                <field name="gender"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title"><field name="full_name"/></strong>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="phone"/>
                                <div><t t-esc="record.age.value"/> years, <t t-esc="record.gender.value"/></div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Patient Action -->
    <record id="action_pharmacy_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">pharmacy.patient</field>
        <field name="view_mode">kanban,list,form</field>
    </record>

</odoo>
