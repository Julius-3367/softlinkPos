<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Controlled Drugs Register Report -->
    <record id="action_report_controlled_drugs" model="ir.actions.report">
        <field name="name">Controlled Drugs Register</field>
        <field name="model">pharmacy.controlled.drugs.register</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">softlink_pos.report_controlled_drugs_document</field>
        <field name="report_file">softlink_pos.report_controlled_drugs_document</field>
        <field name="binding_model_id" ref="model_pharmacy_controlled_drugs_register"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_controlled_drugs_document">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2>Controlled Drugs Register</h2>
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Product</th>
                                <th>Patient</th>
                                <th>ID Number</th>
                                <th>Prescriber</th>
                                <th>Quantity</th>
                                <th>Pharmacist</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="docs" t-as="o">
                                <td><span t-field="o.date"/></td>
                                <td><span t-field="o.product_id.name"/></td>
                                <td><span t-field="o.patient_name"/></td>
                                <td><span t-field="o.patient_id_number"/></td>
                                <td><span t-field="o.prescriber_id.name"/></td>
                                <td><span t-field="o.quantity"/> <span t-field="o.uom_id.name"/></td>
                                <td><span t-field="o.pharmacist_id.name"/></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>

</odoo>
