<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Prescription Report -->
    <record id="action_report_prescription" model="ir.actions.report">
        <field name="name">Prescription</field>
        <field name="model">pharmacy.prescription</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">softlink_pos.report_prescription_document</field>
        <field name="report_file">softlink_pos.report_prescription_document</field>
        <field name="binding_model_id" ref="model_pharmacy_prescription"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_prescription_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Prescription</h2>
                        <div class="row mt-4">
                            <div class="col-6">
                                <strong>Prescription Number:</strong> <span t-field="o.name"/><br/>
                                <strong>Date:</strong> <span t-field="o.prescription_date"/><br/>
                                <strong>Valid Until:</strong> <span t-field="o.valid_until"/><br/>
                            </div>
                            <div class="col-6">
                                <strong>Patient:</strong> <span t-field="o.patient_id.full_name"/><br/>
                                <strong>Age:</strong> <span t-field="o.patient_age"/> years<br/>
                                <strong>Phone:</strong> <span t-field="o.patient_phone"/><br/>
                            </div>
                        </div>
                        <div class="row mt-4">
                            <div class="col-12">
                                <strong>Prescriber:</strong> <span t-field="o.prescriber_id.name"/><br/>
                                <strong>License No:</strong> <span t-field="o.prescriber_license"/><br/>
                                <strong>Diagnosis:</strong> <span t-field="o.diagnosis"/><br/>
                            </div>
                        </div>
                        <div class="row mt-4">
                            <div class="col-12">
                                <h4>Medications</h4>
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Product</th>
                                            <th>Quantity</th>
                                            <th>Dosage</th>
                                            <th>Frequency</th>
                                            <th>Duration</th>
                                            <th>Instructions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr t-foreach="o.line_ids" t-as="line">
                                            <td><span t-field="line.product_id.name"/></td>
                                            <td><span t-field="line.quantity"/> <span t-field="line.uom_id.name"/></td>
                                            <td><span t-field="line.dosage"/></td>
                                            <td><span t-field="line.frequency"/></td>
                                            <td><span t-field="line.duration"/></td>
                                            <td><span t-field="line.instructions"/></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="row mt-4" t-if="o.special_instructions">
                            <div class="col-12">
                                <strong>Special Instructions:</strong><br/>
                                <span t-field="o.special_instructions"/>
                            </div>
                        </div>
                        <div class="row mt-5">
                            <div class="col-6">
                                <p>________________________<br/>Prescriber Signature</p>
                            </div>
                            <div class="col-6">
                                <p>________________________<br/>Pharmacist Signature</p>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>
